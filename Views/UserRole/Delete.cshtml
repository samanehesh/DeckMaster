@model DECKMASTER.ViewModels.UserRoleVM

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 style="color:#6E0B14; ">Delete</h1>

<h3 style="color:#6E0B14; ">Are you sure you want to delete this?</h3>
<div>
    <h4 style="color:#6E0B14; ">@Model.RoleName role for @Model.Email</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2" style="color:#6E0B14; ">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2" style="color:#6E0B14; ">
            @Html.DisplayNameFor(model => model.RoleName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RoleName)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-antiforgery="true" />
        <input type="hidden" asp-for="Email" />
        <input type="hidden" asp-for="RoleName" />
        <input type="submit" value="Delete" class="btn" style="background-color:#6E0B14; color:white;" /> |
        <a asp-action="Index" style="color:#6E0B14; ">Back to List</a>
    </form>
</div>
